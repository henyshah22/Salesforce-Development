<aura:component implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId" access="global">

    <aura:attribute name="imageUrl" type="String" />
    <aura:attribute name="backgroundColor" type="String" />
    <aura:attribute name="description" type="String" />
    <aura:attribute name="fontSize" type="String" />
    <aura:attribute name="fontColor" type="String" />

    <div class="Container" style="{!'background-color:' + v.backgroundColor}">
        <img aura:id="Img" src="{!v.imageUrl}" alt="Image" class="Image" />
        <p class="descriptionText"
           style="{!'color:' + v.fontColor + '; font-size:' + v.fontSize + 'px'}">
            {!v.description}
        </p>
    </div>

</aura:component>
