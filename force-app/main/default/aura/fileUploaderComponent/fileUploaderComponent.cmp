<aura:component controller="FilePreviewController">
    <aura:registerEvent name="imageUploaded" type="c:imageUploadedEvent" />
    <div class="slds-box slds-theme_default slds-p-around_medium">
        <lightning:fileUpload 
            label="Upload Image"
            name="fileUploader"
            accept=".jpg,.jpeg,.png"
            recordId=""
            onuploadfinished="{!c.handleUploadFinished}"
            multiple="false"
            class="slds-p-bottom_small"
        />
    </div>
</aura:component>