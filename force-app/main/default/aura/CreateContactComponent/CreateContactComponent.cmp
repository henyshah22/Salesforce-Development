<aura:component controller="CreateContactController" implements="flexipage:availableForAllPageTypes,force:hasRecordId" access="global">
    <aura:attribute name="contactName" type="String"/>
    <aura:attribute name="mobileNumber" type="String"/>

    <lightning:card title="Create Contact">
        <div class="slds-p-around_medium slds-grid slds-wrap slds-gutters">

            <div class="slds-col slds-size_1-of-1 slds-p-bottom_small">
                <lightning:input label="Contact Name"
                                 value="{!v.contactName}"
                                 required="true"
                                 class="custom-input"/>
            </div>

            <div class="slds-col slds-size_1-of-1 slds-p-bottom_small">
                <lightning:input label="Mobile Number"
                                 value="{!v.mobileNumber}"
                                 required="true"/>
            </div>

            <div class="slds-col slds-size_1-of-1 slds-align_absolute-left slds-m-top_medium">
                <lightning:button label="Create Contact"
                                  variant="brand"
                                  onclick="{!c.createContact}"/>
            </div>

        </div>
    </lightning:card>
</aura:component>
